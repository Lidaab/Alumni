    <script>
        const csvUrl = 'https://raw.githubusercontent.com/TON_USER/TON_DEPOT/main/ton_fichier.csv';

        fetch(csvUrl)
            .then(response => response.text())
            .then(data => {
                const lines = data.split('\\n');
                const container = document.getElementById('cardsContainer');

                lines.shift(); // En-tête

                lines.forEach(line => {
                    const [Nom, Prénom, NomDePromotion, AnnéeDiplôme, Campus, , Photo, Linkedin] = line.split(',');
                    if (Nom && Prénom) {
                        const card = document.createElement('div');
                        card.className = 'card';
                        card.innerHTML = `
                            <img src="${Photo.trim()}" alt="Photo de ${Prénom.trim()} ${Nom.trim()}">
                            <h3>${Prénom.trim()} ${Nom.trim()}</h3>
                            <p>Promotion: ${NomDePromotion.trim()}</p>
                            <p>Année: ${AnnéeDiplôme.trim()}</p>
                            <p>Campus: ${Campus.trim()}</p>
                            <button onclick="window.open('${Linkedin.trim()}')">Voir Profil LinkedIn</button>
                        `;
                        container.appendChild(card);
                    }
                });
            })
            .catch(error => console.error('Erreur:', error));
    </script>
